# Supabase Configuration
# For local development, use local Supabase instance
# For production, use your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration
# For local development, use local worker
# For production, use your deployed worker URL (e.g., https://api.yourdomain.com)
NEXT_PUBLIC_API_URL=http://localhost:8787

# Site Configuration
# For local development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Dev Auth Bypass (LOCAL DEVELOPMENT ONLY - never enable in production)
# Set to "true" to enable the quick login button on the login page
NEXT_PUBLIC_ENABLE_DEV_AUTH=false
NEXT_PUBLIC_DEV_EMAIL=dev@localhost.test
NEXT_PUBLIC_DEV_PASSWORD=devpassword123
